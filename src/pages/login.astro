---
import Button from "../components/Button.vue";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="flex flex-1 items-center justify-center h-80">
    <form class="flex flex-col gap-2">
      <div>
        <label for="username">User name</label>
        <input
          id="username"
          class="form-input mt-1 text-palette-100 focus:text-palette-400 block w-full rounded-md bg-palette-300 border-none focus:bg-palette-100 focus:ring-0  hover:outline-offset-2 hover:outline-dashed  hover:outline-2  hover:outline-palette-200 focus:outline-offset-2 focus:outline-dashed  focus:outline-2  focus:outline-palette-200"
        />
      </div>
      <div>
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          class="form-input mt-1 text-palette-100 focus:text-palette-400 block w-full rounded-md bg-palette-300 border-none focus:bg-palette-100 focus:ring-0  hover:outline-offset-2 hover:outline-dashed  hover:outline-2  hover:outline-palette-200 focus:outline-offset-2 focus:outline-dashed  focus:outline-2  focus:outline-palette-200"
        />
      </div>
      <Button label={"Go"}></Button>
    </form>
  </div>
</Layout>
